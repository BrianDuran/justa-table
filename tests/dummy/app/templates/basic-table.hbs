<h3>Basic Table</h3>

{{#justa-table content=model}}
  {{#table-columns as |row|}}

    {{table-column
      row=row
      width=90
      headerName='Name'
      valueBindingPath='displayName'}}

    {{#table-column headerName='Image'}}
      <a href="#">
        <img src={{row.image}} height="32" {{action 'imageClicked' row}} />
      </a>
    {{/table-column}}

  {{/table-columns}}
{{/justa-table}}
